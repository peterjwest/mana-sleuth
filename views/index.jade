form.search.well.form-inline(method='get')
  .inputs
    input.query(name="query", type='text', placeholder='Type anything', value=request.query.query)
    input.submit.btn.btn-primary(type='submit', value='Search').xhr

if cards && cards.length
  include _pagination

  //.results-info: p.alert.alert-info
    = "Found: "+pager.totalItems+" cards"

  section.cards.row
    each card in cards
      article.card.span6
        img(src=router.image(card.gathererId())).image
        .text
          h3.name: a(href=router.card(card.gathererId()))= card.name
          h4
            span.types= card.typeNames(categories.id.types)
            if card.subtypes.length > 0
              span.subtypes= " - "+card.subtypeNames(categories.id.subtypes)
            if card.creature(categories.id.types)
              span.strength= " "+card.power+"/"+card.toughness
          each rule in card.rules
            p.rule= rule

  include _pagination
